<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/interaction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TitleName"
            android:text="Quiz Interaction" />

        <Button
            android:id="@+id/quiz_btn_save"
            style="@style/SmallButton"
            android:text="Save" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/interaction_title"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/instructions_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Instructions"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/instructions_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/instructions_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="4"
                android:lines="3"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/question_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Question"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/question_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="4"
                android:lines="3"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answer1_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Answer 1"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answer1_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/answer1_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="2"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answer2_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Answer 2"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answer2_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/answer2_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="2"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answer3_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Answer 3"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answer3_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/answer3_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="2"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answer4_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Answer 4"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answer4_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/answer4_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="2"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/correct_ans_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Answer 4"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/correct_ans_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/correct_ans_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="2"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/negative_feed_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Negative Feedback"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/negative_feed_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/negative_feed_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="2"
                android:lines="3"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/positive_feed_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Positive Feedback"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/positive_feed_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/positive_feed_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="2"
                android:lines="3"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/positive_feed_url_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Positive Feedback URL"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/positive_feed_url_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/positive_feed_url_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="2"
                android:lines="3"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/negative_feed_url_txt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Negative Feedback URL"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/negative_feed_url_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/negative_feed_url_txt"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:maxLines="2"
                android:lines="3"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
